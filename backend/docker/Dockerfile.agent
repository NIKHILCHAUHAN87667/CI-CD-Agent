FROM python:3.10-slim

# Set working directory
WORKDIR /agent

# Install git and system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Install pytest and common testing tools + sandbox server deps
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    pytest \
    pytest-cov \
    pytest-xdist

# This is the agent that will run inside a sandboxed environment
# The actual repo code and its dependencies will be installed at runtime

# Copy the server script
COPY docker/agent_server.py .

# Expose port
EXPOSE 8080

# Run sandbox server
CMD ["uvicorn", "agent_server:app", "--host", "0.0.0.0", "--port", "8080"]
